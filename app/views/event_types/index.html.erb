<h1>Listing event_types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @event_types.each do |event_type| %>
    <tr>
      <%= content_tag( :td, link_to(event_type.name, event_type)) %>
      <%= content_tag( :td, event_type.description ) %>
      <%= content_tag( :td, link_to( 'Edit', edit_event_type_path(event_type))) %>
      <%= content_tag( :td, link_to('Destroy', event_type, method: :delete, data: { confirm: 'Are you sure?' })) %>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

