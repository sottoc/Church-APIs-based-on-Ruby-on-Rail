          <div class='o-pageContent__section p-home-content__locations'>
            <div class='container'>
              <div class='row'>
                <div class='ten columns offset-by-one'>
                  <h2 class='boxed boxed--white'>We'd love to meet you.</h2>
                  <br><br><br>
                  <div class='row o-locationList'>
                    <% @listings.each do |location| %>
                      <div class='six columns o-locationList__location o-locationList__location--spacerUnder'>


                        <h3 class='o-locationList-location__name'>
                          <%= image_tag(location.inline_logo.url(:original), class:'location')%>
                        </h3>
                        <span class='o-locationList-location__divider'></span>
                        <address class='o-locationList-location__address'>
                          <%= location.address %>
                        </address>
                        <a class='o-locationList-location_phone' tabIndex="-1" href="tel:<%= location.phone %>">
                          <%= location.phone %>
                        </a>
                        <span class='o-locationList-location__times'><strong><%= location.times %></strong></span>
                        <a href='https://www.google.ca/maps/dir//C3+Church,+<%=location.address%>,+<%=location.city%>,+<%=location.province%>,+<%=location.code%>/@<%=location.latitude%>,<%=location.longitude%>'
                          class='button' target='_blank'>Get Directions</a>

                      </div>
                        <% end %>

                  </div>
                </div>
              </div>
            </div>
          </div>