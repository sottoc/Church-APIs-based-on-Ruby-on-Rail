<section class='stat-dashboard'>
  <div class='bottom-row five'>
    <div class='title'>
      Past Week Totals
      <% if current_user.has_role?( :admin)%>
      <i class='fa fa-refresh' data-ng-click = "refreshData()" title='refresh data'></i>
      <% end %>
    </div>
    <div class='stat <%= trend_stat("Church",:attendance,'sunday') %>'>
      <div class='circle circle-border'>
        <div class='circle-inner'>
          <div class='radial-1 ring-1-63'>
            <div class='radial-2 ring-2-37'>
              <div class='overlay'>
          <div class='stat-text'>
            <%= stat("Church",:attendance,'sunday') %>
          </div>
        </div>
        </div>
        </div>
        </div>
      </div>
      <div class='caption'>Attendance</div>
      <div class="previous">
        <%= stat("Church", :attendance,'last sunday') %>
        <span><%=difference_stat("Church",:attendance,'sunday') %></span>
      </div>
    </div>
    <div class='stat <%= trend_stat("Church",:visitors,'sunday') %>'>
      <div class='circle circle-border'>
        <div class='circle-inner'>
          <div class='stat-text'>
            <%= stat("Church",:visitors,'sunday') %>
          </div>
        </div>
      </div>
      <div class='caption'>Visitors</div>
      <div class="previous">
        <%= stat("Church",:visitors,'last sunday') %>
        <span><%= difference_stat("Church",:visitors,'sunday') %></span>
      </div>
    </div>
    <div class='stat <%= trend_stat("Church",:decisions,'sunday') %>'>
